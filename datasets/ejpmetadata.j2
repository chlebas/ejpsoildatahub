mcf:
    version: 1.0

metadata:
    identifier: {{ md['identifier'] }} 
    language: {{ md['resource language'] }} 
    language_alternate: {{md['second language']}} 
    charset: utf8
    hierarchylevel: dataset
    datestamp: {% now 'local' %}

spatial:
    scale:  {{md['spatial resolution scale']}} 
    resolution:  {{md['spatial resolution distance']}} 

identification:
    language: {{ md['resource language'] }}
    charset: utf8
    title: "{{ md['resource title'] }}"
    abstract: >
        {{ md['resource abstract'] }}
    dates:
        {{ md['temporal reference'] or 'publication' }}: {{ md['date of temporal reference'] or '2022' }}
    keywords:
        default:
            keywords:
                - MensMenu
        country:
            keywords: [{{ md['Country'] }}]
            vocabulary:
                    name: Country
                    url: http://publications.europa.eu/resource/authority/country
        theme:
            keywords: [{{ md['data type'] }}]
            vocabulary:
                name: Agrovoc - Soil sciences
                url: http://aims.fao.org/aos/agrovoc/c_7188
        prop: 
            keywords: [ {{ md['theme'] }} ]
            vocabulary:
                name: Agrovoc - Soil properties
                url: http://aims.fao.org/aos/agrovoc/c_330883
    topiccategory:
        - geoscientificInformation
    extents:
        temporal:
            - begin: "{{ md['individual date'] or md['interval of dates'] }}"
    accessconstraints: "{{ md['limitations on public access'] }}"
    rights: "{{ md['conditions applying to access and use'] }}"
    url: "{{ md['link_to_viewer'] }}"
    status: onGoing
    maintenancefrequency: continual

contact:
    pointOfContact: 
        organization: "{{ md['name of organisation'] }}"
        individualname: "{{ md['contact person'] }}"
        country: {{ md['Country'] }}
        email: {{ md['email address'] }}
        contactinstructions: email

distribution:
    {% if md['resource locator'] %}
    {{md['format'] | lower or 'dl1'}}:
        url: {{ md['resource locator'] }}
        type: {% if md['format'].upper() in ['WMS','WFS','WCS'] 
                %}ogc:{% elif md['format'].upper() in ['HTML'] 
                %}text/{% elif md['format'].upper() in ['PNG','TIF','JPG'] 
                %}image/{% else %}application/{% endif %}{{ md['format'] | lower }}
        name: {{ md['format']}}
    {% endif %}
    {% if md['second resource locator'] %}
    {{ md['second resource format'] or 'dl2'}}: 
        url: {{ md['second resource locator']}}
        type: {{ md['second resource format'] | upper }}
        name: {{ md['second resource format'] }}
    {% endif %}
dataquality:
    scope:
        level: dataset
    lineage:
        statement: 




