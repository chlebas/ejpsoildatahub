mcf:
    version: 1.0
metadata:
    identifier: "{{ md['id'] }}"
    language: eng
    charset: utf8
    hierarchylevel: "dataset"
    datestamp: {{ md['year'] }}-01-01
    dataseturi: "{{ md['uri'] }}"
identification:
    title: "{{ md['title'] }}"
    abstract: |
        {{ md['abstract'] }}
    dates:
        creation: {{ md['year'] }}-01-01
    keywords:
        default:
            keywords: 
              - ESDAC
              - {{ md['kw1'] }}
              {% if md['kw2'] %} - {{ md['kw2'] }} {% endif %}
    topiccategory:
        - geoscientificInformation
    status: completed

contact:
    pointOfContact: 
        organization: {{ md['publisher'] or 'Joint Research Centre of the European Commission' }}
        country: Italy
        email: ec-esdac@ec.europe.eu

distribution:
    md:
        url: "{{ md['uri'] }}"
        type: "metadata"
        name: "{{ md['title'] }}"
    thumbnail:
        url: "{{ md['img'] }}"
        type: image/{{ md['img'].split(".").pop() }}
        rel: preview
        name: Preview
dataquality:
    scope:
        level: dataset





